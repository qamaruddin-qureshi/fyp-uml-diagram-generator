@startuml
left to right direction
actor "SalesRep" as SalesRep
actor "Contact" as Contact
actor "Manager" as Manager
actor "User" as User
rectangle System {
usecase "Be able to set a follow-up reminder for a specific contact" as Beabletosetafollowupreminderforaspecificcontact
usecase "View all contacts associated with a specific company" as Viewallcontactsassociatedwithaspecificcompany
usecase "Assign ownership of a lead to a specific sales rep" as Assignownershipofaleadtoaspecificsalesrep
usecase "Send an automated welcome email to a new contact" as Sendanautomatedwelcomeemailtoanewcontact
usecase "Mark an opportunity as 'closed won'" as Markanopportunityasclosedwon
usecase "Be able to export a list of leads for a specific campaign" as Beabletoexportalistofleadsforaspecificcampaign
}
SalesRep --> Beabletosetafollowupreminderforaspecificcontact
Contact --> Beabletosetafollowupreminderforaspecificcontact
SalesRep --> Viewallcontactsassociatedwithaspecificcompany
Manager --> Assignownershipofaleadtoaspecificsalesrep
SalesRep --> Assignownershipofaleadtoaspecificsalesrep
Contact --> Sendanautomatedwelcomeemailtoanewcontact
SalesRep --> Markanopportunityasclosedwon
User --> Beabletoexportalistofleadsforaspecificcampaign
@enduml